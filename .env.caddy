# =============================================================================
# CADDY REVERSE PROXY CONFIGURATION
# =============================================================================

# SSL/TLS Configuration (Local Development)
CADDY_EMAIL=admin@dev.localhost
CADDY_ACME_CA=internal  # Use Caddy's internal CA for local development
CADDY_SKIP_VERIFY=true

# Docker Provider
CADDY_DOCKER_POLLING_INTERVAL=5s
CADDY_DOCKER_REFRESH_INTERVAL=30s
CADDY_DOCKER_NETWORK=lightrag_frontend

# Security
CADDY_AUTO_HTTPS=internal
CADDY_ADMIN_LISTEN=:2019

# Logging
CADDY_LOG_LEVEL=INFO
CADDY_ACCESS_LOG=/var/log/caddy/access.log
CADDY_ERROR_LOG=/var/log/caddy/error.log