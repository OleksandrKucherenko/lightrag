# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

#
# Logical namespace used by Redis to group keys by environment/workspace.
#
REDIS_WORKSPACE=production

#
# Maximum memory Redis may use before applying the eviction policy.
#
REDIS_MAX_MEMORY=1gb

#
# Enables data persistence for Redis (AOF/RDB) to survive restarts.
#
REDIS_PERSISTENCE=yes

#
# Logical namespace/prefix used by Qdrant to separate collections per workspace.
#
QDRANT_WORKSPACE=production

#
# Expected upper bound for collection size to guide resource planning.
#
QDRANT_COLLECTION_SIZE=1000000

#
# HNSW graph M parameter controlling index connectivity and recall/cost tradeoff.
#
QDRANT_HNSW_M=16

#
# Logical namespace used by Memgraph for isolating graph data per workspace.
#
MEMGRAPH_WORKSPACE=production

#
# Memory limit for Memgraph in megabytes to prevent overuse.
#
MEMGRAPH_MEMORY_LIMIT=4096

#
# Minimum log level Memgraph emits (e.g., INFO, WARNING, ERROR).
#
MEMGRAPH_LOG_LEVEL=WARNING

#
# Default host used by Memgraph Lab for quick connect settings.
#
QUICK_CONNECT_MG_HOST=graph

#
# Default port used by Memgraph Lab for quick connect settings.
#
QUICK_CONNECT_MG_PORT=7687
