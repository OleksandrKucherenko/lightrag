# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

#
# Bind address Isaiah uses for the web console.
#
ISAIAH_HOST=0.0.0.0

#
# Port where the Isaiah monitoring UI listens.
#
ISAIAH_PORT=3000

#
# Enables periodic container health checks within Isaiah.
#
HEALTH_CHECK_ENABLED=true

#
# Interval in seconds between Isaiah health check runs.
#
HEALTH_CHECK_INTERVAL=30

#
# Presentation style for container health badges.
#
CONTAINER_HEALTH_STYLE=icon

#
# Toggles authentication on the monitoring interface.
#
AUTHENTICATION_ENABLED=false
