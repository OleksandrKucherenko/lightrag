# =============================================================================
# OPENWEBUI CORE SETTINGS
# =============================================================================
# Optional feature toggles now reside in .env.optional.

# Authentication and routing towards the LightRAG API.
WEBUI_AUTH=True
OPENAI_API_BASE_URL=http://rag:9621/v1
OPENAI_API_KEY=${LIGHTRAG_API_KEY}
ENABLE_SIGNUP=false
ENABLE_LOGIN_FORM=true
DEFAULT_USER_ROLE=admin

# RAG document ingestion and chat behaviour.
FILE_UPLOAD_ENABLED=true
SUPPORTED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md,.csv,.json
CHAT_COMPLETION_ENABLED=true
CHAT_HISTORY_ENABLED=true
CORS_ALLOW_ORIGIN=*

# Shared service integrations.
REDIS_URL=redis://kv:6379/0
ENABLE_REDIS=true
SESSION_BACKEND=redis
VECTOR_DB=qdrant
QDRANT_URI=http://vectors:6333
QDRANT_API_KEY=${QDRANT_API_KEY}
QDRANT_COLLECTION_NAME=openwebui

# Embedding and search defaults aligned with the LightRAG backend.
RAG_EMBEDDING_ENGINE=openai
RAG_EMBEDDING_MODEL=text-embedding-3-small
CONTENT_EXTRACTION_ENGINE=tika
ENABLE_CONTENT_EXTRACTION=true
ENABLE_SEARCH=true
SEARCH_BACKEND=qdrant
